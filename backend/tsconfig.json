{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
  
      "alwaysStrict": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "esModuleInterop": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }